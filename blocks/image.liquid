{% style %}
  #shopify-block-{{ block.id }}{
    height:100%;
  }
{% endstyle %}
<img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" loading="lazy">
{% schema %}
  {
    "name": "image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Select Image"
      }
    ],
    "presets": [
      {
        "name": "image"
      }
    ]
  }
{% endschema %}