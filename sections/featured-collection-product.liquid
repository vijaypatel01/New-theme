<div class="featured-collection-product-section">
  <div class="page-width">
    <div class="featured-collection-product-row">
      {% for product in section.settings.collection.products %}
        <div class="featured-collection-product-column">
          <div class="image-block">
            <img src="{{ product.featured_image | img_url }}">
          </div>
          <h3>{{ product.title | link_to_tag }}</h3>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Featured Product List",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection Product"
      }
    ]
  }
{% endschema %}