<div class="featured-collection-product-section">
  <div class="page-width">
    <div class="featured-collection-product-row card-product-row">
      {% if section.settings.collection and section.settings.collection.products.size > 0 %}
        {% for product in section.settings.collection.products %}
          <div class="featured-collection-product-column card-product-column">
            <div class="image-block">
              <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
            </div>
            <h3>
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
          </div>
        {% endfor %}
      {% else %}
        <p>No products found in this collection.</p>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Product List",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection Product"
      }
    ]
  }
{% endschema %}