<div class="featured-collection-product-section">
  <div class="page-width">
    <div class="featured-collection-product-row card-product-row grid--{{ section.settings.product-columns }}-col">
      {% if section.settings.collection and section.settings.collection.products.size > 0 %}
        {% for product in section.settings.collection.products %}
          {% render 'card-product',product:product %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Product List",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "product-columns",
        "label": "Product Card Column",
        "min": 0,
        "max": 6,
        "default":4,
        "step": 1,
        "unit": "px"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection Product"
      }
    ]
  }
{% endschema %}